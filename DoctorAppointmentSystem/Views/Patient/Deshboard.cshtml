
@{
    ViewBag.Title = "Available Doctors";
}
<div class="row">
    <div class="col-md-6">
        <input type="text" id="search-doctor" class="form-control" placeholder="Search Doctor" title="Search Doctor">
    </div>
</div>

<div class="content" style="margin-top:10px;">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Available Doctors</h4>
                </div>
                <div class="card-body">
                    <div>
                        <table class="table" id="tableData">
                            <thead class="text-primary">
                                <tr>
                                    <th>
                                        #
                                    </th>
                                    <th>
                                        Doctor Name
                                    </th>
                                    <th>
                                        Start Time
                                    </th>
                                    <th>
                                        End Time
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>
                                <tr hidden id="dataRow">
                                    <td id="No"></td>
                                    <td id="fullName"></td>
                                    <td id="startTime"></td>
                                    <td id="endTime"></td>
                                    <td id="action"></td>
                                </tr>
                            </thead>

                            <tbody id="tbody"></tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

  <!-- Modal -->
<div class="modal fade" id="apiontmentModel" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Request Appointment</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <label id="myRequestDoctorId" hidden></label>
                <label>Time Start</label>
                <input type="time" id="startTimeReq" class="form-control floating-label" placeholder="Start Time">
                <div class="row" style="margin-top:10px"></div>
                <label>Time End</label>
                <input type="time" id="endTimeReq" class="form-control floating-label" placeholder="End Time">
                <div class="row" style="margin-top:10px">
                    <div class="col-md-1"></div>
                    <label class="error1 col-md-10"></label>
                    <div class="col-md-1"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" onclick="makeAppointment()" class="btn btn-success">Submit</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<!--    end modal -->
@section scripts{
    <script>
        $(document).ready(function () {
            $("#deshboradPatient").addClass("active");
        });
    </script>
    <script src="~/Scripts/CustomJS/Patient/get-all-available-doctors.js"></script>
}